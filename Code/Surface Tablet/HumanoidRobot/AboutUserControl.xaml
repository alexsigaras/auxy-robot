<UserControl
    x:Class="HumanoidRobot.AboutUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HumanoidRobot"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid Background="Black">
        <TextBlock HorizontalAlignment="Left" Margin="34.5,12.5,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="18.667" Width="110" FontFamily="Assets/fonts/SEGOEUIL.TTF#Segoe UI Light"> Save Settings</TextBlock>
        <TextBlock HorizontalAlignment="Left" Height="55" Margin="35,65,0,0" TextWrapping="Wrap" Text="Do you want to store the state of this application on exit?" VerticalAlignment="Top" Width="166" FontSize="14"/>
        <ToggleSwitch x:Name="saveSwitch" Header="Save" HorizontalAlignment="Left" Margin="35,119,0,0" VerticalAlignment="Top" OffContent="No" OnContent="Yes" IsOn="True" Toggled="saveSwitch_Toggled_1"/>
        <Button x:Name="CloseBtn" Content="Close" HorizontalAlignment="Left" Margin="35,196,0,0" VerticalAlignment="Top" FontSize="12" Click="CloseBtn_Click" />
    </Grid>
</UserControl>
